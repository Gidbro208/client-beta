"$slider_value_binding_name": "#field_of_view",
"$option_enabled_binding_name": "#field_of_view_enabled",
"$label_bindings": [
{
"binding_name": "$option_label"
}
]
}
},
{
"pov_panel_tripple": {
"type": "stack_panel",
"size": ["33.3%",30],
"orientation": "horizontal",
"controls": [
